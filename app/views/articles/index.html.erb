<h1>Listing articles</h1>

<table>
	<tr>
		<th>Title</th>
		<th>Text</th>
		<th colspan="2"></th>
	</tr>
	
	<% @articles.each do |article| %>
		<tr>
		<td><%= article.title %></td>
		<td><%= article.text %></td>
		<td><%= link_to 'Exibir', article_path(article) %></td>
		<td><%= link_to 'Editar', edit_article_path(article) %></td>
		<td>
			<%= link_to 'Apagar', 	article_path(article), 
									method: :delete, 
									data: { confirm: 'Deseja apagar?' } %>
		</td>
	</tr>
<% end %>